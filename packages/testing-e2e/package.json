{
  "name": "testing-e2e",
  "version": "1.0.0",
  "description": "e2e scenario testing with cucumber.js",
  "type": "module",
  "scripts": {
    "build:1-tsc": "tsc -b",
    "build": "run-s 'build:*'",
    "test": "env-cmd --silent -f ../../.env cucumber-js --publish",
    "codegen": "run-s 'codegen:*'",
    "codegen:2-generate": "env-cmd -x -f ../../.env pg-typecraft generate --schema one_sql --pascalCaseTables --camelCaseColumns --uri \\$POSTGRES_URI --outDir 'src/codegen'",
    "postcodegen": "pnpx eslint ./src/codegen/**/*.ts --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "postgres": "^3.4.7",
    "@cucumber/cucumber": "^11.3.0",
    "glob": "^11.0.2"
  },
  "devDependencies": {
    "pg-typecraft": "workspace:^1.0.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "copyfiles": "^2.4.1",
    "cucumber-html-reporter": "latest",
    "ts-node": "^10.9.2"
  }
}
